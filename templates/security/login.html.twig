{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="container col-lg-4 mt-5 ml-auto mr-auto">
        <h1 class="mb-4">Login</h1>
    <form action="{{ path('security_login') }}" method="post" class="mb-1">
        <div class="form-group">
            <input placeholder="Adresse email ..." required name="_username" class="form-control" type="email">
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe ..." required name="_password" class="form-control" type="password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary d-block m-auto">Login</button>
        </div>
    </form>

    <div class="d-flex flex-column align-items-center">
    <small class="mb-2">If you don't have an account:</small>
    <a href="{{ path('security_registration')}}" class="btn btn-primary mb-5 w-auto ">Registration</a>

    </div>
   
    </div>

{% endblock %}
