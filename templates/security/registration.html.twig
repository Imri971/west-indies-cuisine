{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur la page d'inscription{% endblock %}

{% block body %}

<div class="container mt-4 ml-auto mr-auto col-lg-7">
    <h1 class="mb-4">Registration</h1>
  {{form_start(form)}}
    {{form_row(form.username, {'label' : 'Nom d\'utilisateur','attr': {'placeholder': 'Votre nom d\'utilisateur'}})}}
    {{form_row(form.email, {'label' : 'Adresse mail','attr': {'placeholder': 'Votre adresse mail'}})}}
    {{form_row(form.password, {'label' : 'Mot de passe','attr': {'placeholder': 'Votre mot de passe'}})}}
    {{form_row(form.confirm_password, {'label' : 'Confirmation','attr': {'placeholder': 'Confirmation du mot de passe'}})}}
    {{form_row(form.picture)}}
    {{form_row(form.submit, {'label': 'Registration'})}}
    
  {{form_end(form)}}
  </div>
{% endblock %}
