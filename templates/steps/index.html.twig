{% extends 'base.html.twig' %}

{% block title %}Steps index{% endblock %}

{% block body %}

    <div class="container col-lg-8">
         <h1>Steps index</h1>

    <table class="table text-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Spot</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for step in steps %}
            <tr>
                <td>{{ step.id }}</td>
                <td>{{ step.spot }}</td>
                <td>{{ step.description }}</td>
                <td>
                    <a href="{{ path('steps_show', {'id': step.id}) }}">show</a>
                    <a href="{{ path('steps_edit', {'id': step.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('steps_new') }}">Create new</a>
    </div>
   
{% endblock %}
