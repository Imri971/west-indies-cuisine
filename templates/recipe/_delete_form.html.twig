<form method="post" action="{{ path('recipe_delete', {'id': recipes.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipes.id) }}">
    <button class="badge badge-dark mt-2"><i class="fas fa-trash"></i></button>
</form>
